<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>managementSystem</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>IndexClassesController</servlet-name>
    <servlet-class>controller.IndexClassesController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexClassesController</servlet-name>
    <url-pattern>/classes/index</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddClassesController</servlet-name>
    <servlet-class>controller.AddClassesController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddClassesController</servlet-name>
    <url-pattern>/classes/add</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginConttroller</servlet-name>
    <servlet-class>controller.LoginConttroller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginConttroller</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>IndexController</servlet-name>
    <servlet-class>controller.IndexController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexController</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddTraineeController</servlet-name>
    <servlet-class>controller.AddTraineeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddTraineeController</servlet-name>
    <url-pattern>/trainee/add</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>EditTraineeController</servlet-name>
    <servlet-class>controller.EditTraineeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditTraineeController</servlet-name>
    <url-pattern>/trainee/edit</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AddNewTrainerController</servlet-name>
    <servlet-class>controller.AddNewTrainerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddNewTrainerController</servlet-name>
    <url-pattern>/trainer/add</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>IndexTrainerController</servlet-name>
    <servlet-class>controller.IndexTrainerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexTrainerController</servlet-name>
    <url-pattern>/trainer/index</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>EditTrainerController</servlet-name>
    <servlet-class>controller.EditTrainerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditTrainerController</servlet-name>
    <url-pattern>/trainer/edit</url-pattern>
  </servlet-mapping>
  
</web-app>